    <ImageView
        android:id="@+id/image_armed_robbery"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:clickable="true"
        android:src="@drawable/ic_armed_robbery"
        android:layout_alignTop="@+id/image_assault"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/image_fight"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:clickable="true"
        android:src="@drawable/ic_fight"
        android:layout_alignTop="@+id/image_armed_robbery"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/image_discrimination"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:clickable="true"
        android:src="@drawable/ic_discrimination"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/image_assault"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/image_assault"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:clickable="true"
        android:src="@drawable/ic_assault"
        android:layout_marginTop="57dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
